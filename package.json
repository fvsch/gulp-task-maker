{
  "name": "gulp-task-maker",
  "version": "2.0.0-beta1",
  "description": "Helper for writing and running configurable gulp tasks. Separates task logic and configuration, allows multiple builds using the same task, and uses system notifications for configuration and plugin errors.",
  "author": "Florens Verschelde <florens@fvsch.com>",
  "repository": "https://github.com/fvsch/gulp-task-maker",
  "license": "MIT",
  "keywords": [
    "gulp",
    "helper",
    "task"
  ],
  "files": [
    "/README.md",
    "/LICENSE",
    "/*.js"
  ],
  "engines": {
    "node": ">=6.5"
  },
  "scripts": {
    "format": "prettier *.js --write",
    "lint": "eslint *.js"
  },
  "peerDependencies": {
    "gulp": "^4.0.0"
  },
  "dependencies": {
    "fancy-log": "^1.3.2",
    "glob": "^7.1.2",
    "gulp-plumber": "^1.2.0",
    "gulp-size": "^3.0.0",
    "gulp-sourcemaps": "^2.6.4",
    "node-notifier": "^5.2.1"
  },
  "devDependencies": {
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "prettier": "^1.12.1"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true
  }
}
